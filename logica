
Dim totalSoma As Integer
Dim mais As Boolean


Sub c()
Set Label = UserForm1.Label1
    If Label.Caption <> "" Then
        Label.Caption = Label.Caption + "1"
        
        Else
        
        Label.Caption = 1
    
    End If
    
    
End Sub

