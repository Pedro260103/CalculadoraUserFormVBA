Sub soma()
    Set Label = UserForm1.Label1
    If Label.Caption <> "" Then
        Dim ValorBase As Integer
        Dim ValorBase2 As Integer
        
        If mais = True Then
            ValorBase2 = CInt(Label.Caption)
            totalSoma = ValorBase + ValorBase2
            Label.Caption = totalSoma
        Else
            ValorBase = CInt(Label.Caption)
            Label.Caption = ""
            mais = True
        End If
    Else
        MsgBox "Vazio"
    End If
End Sub

Sub igual()
    Set Label = UserForm1.Label1
    Label.Caption = totalSoma
End Sub
